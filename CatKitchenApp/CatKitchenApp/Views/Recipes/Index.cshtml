@model IEnumerable<CatKitchenApp.Models.Recipe>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get" class="filter-panel d-flex justify-content-between align-items-end">
    <div class="filter-group">
        <label>Категория кошкоеды</label>
        <select name="categoryId" class="form-control" asp-items="ViewBag.Categories" onchange="this.form.submit()">
            <option value="">Все категории</option>
        </select>
    </div>

    <div class="filter-group">
        <label>Сортировка</label>
        <select name="sortOrder" class="form-control" onchange="this.form.submit()">
            <option value="">По умолчанию</option>
            <option value="Time">Время</option>
            <option value="Name">Название</option>
        </select>
    </div>

    <div class="filter-group">
        <label>Поиск кошкорецептов</label>
        <input type="text" name="searchString" class="form-control" placeholder="Введите название..." />
    </div>

    <div class="view-toggles">
        <button class="btn btn-sm btn-outline-secondary">СПИСОК</button>
        <button class="btn btn-sm btn-outline-secondary">ПЛИТКА</button>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RecipeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CookingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CookingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.AuthorName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RecipeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RecipeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RecipeID">Delete</a>
            </td>
        </tr>
}
    </tbody>

</table>

<div class="bottom-panel d-flex justify-content-between align-items-center mt-3">
    <span>Найдено @ViewBag.Count рец.</span>
    <div>
        <button class="btn btn-secondary">избранное</button>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">+ добавить рецепт</a>
        }
    </div>
</div>
